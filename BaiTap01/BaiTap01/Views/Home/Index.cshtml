@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Viet Nam</h1>

    <h2>Bảng Cửu Chương</h2>

    <div class="cuu-chuong-container">
        <div class="cuu-chuong">
            <h3>Cửu Chương 2</h3>
            @for (int i = 1; i <= 10; i++)
            {
                @($"2 x {i} = {2 * i}")<br />
            }
        </div>

        <div class="cuu-chuong">
            <h3>Cửu Chương 3</h3>
            @for (int i = 1; i <= 10; i++)
            {
                @($"3 x {i} = {3 * i}")<br />
            }
        </div>

        <div class="cuu-chuong">
            <h3>Cửu Chương 4</h3>
            @for (int i = 1; i <= 10; i++)
            {
                @($"4 x {i} = {4 * i}")<br />
            }
        </div>

        <div class="cuu-chuong">
            <h3>Cửu Chương 5</h3>
            @for (int i = 1; i <= 10; i++)
            {
                @($"5 x {i} = {5 * i}")<br />
            }
        </div>
        
        <div class="cuu-chuong">
            <h3>Cửu Chương 6</h3>
            @for (int i = 1; i<=10; i++)
            {
                @($"6 x {i} = {6 ^ i}")<br />
            }
        </div>

	</div>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<style>
	.cuu-chuong-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
	}

    .cuu-chuong {
        flex: 1 1 200px;
        margin: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }
